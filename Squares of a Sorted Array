from typing import List

class Solution:
    def sortedSquares(self, nums: List[int]) -> List[int]:
        neg = []
        pos = []

        # separate neg and pos
        for num in nums:
            if num < 0:
                neg.append(num)
            else:
                pos.append(num)

        # case 1: no negative numbers
        if len(neg) == 0:
            return [x*x for x in pos]

        # case 2: no positive numbers
        if len(pos) == 0:
            res = [x*x for x in neg]
            res.reverse()
            return res

        # case 3: both exist
        neg = [x*x for x in neg][::-1]   # square and reverse
        pos = [x*x for x in pos]         # square

        n, m = len(neg), len(pos)
        i = j = 0
        res = []

        # merge two sorted lists
        while i < n and j < m:
            if neg[i] <= pos[j]:
                res.append(neg[i])
                i += 1
            else:
                res.append(pos[j])
                j += 1

        while i < n:
            res.append(neg[i])
            i += 1

        while j < m:
            res.append(pos[j])
            j += 1

        return res
